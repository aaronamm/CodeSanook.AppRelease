@using CodeSanook.AppRelease.Controllers
@using CodeSanook.Common.Web
@using CodeSanook.AppRelease.ViewModels
@model AppReleaseCreateViewModel

@{
    Layout.Title = T("Add app release");
}

@using (Html.BeginForm(
    "Create",
    MvcHelper.GetControllerName<AppReleaseController>(),
    FormMethod.Post,
    new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryTokenOrchard()

    <fieldset>
        @Html.LabelFor(m => m.File)
        @Html.TextBoxFor(m => m.File, new { type = "file" })
        <br />
        @Html.ValidationMessageFor(m => m.File)
    </fieldset>

    <fieldset>
        @Html.LabelFor(m => m.VersionNumber)
        @Html.TextBoxFor(m => m.VersionNumber, new { @class = "text medium" })
        <br />
        @Html.ValidationMessageFor(m => m.VersionNumber)
    </fieldset>

    <fieldset>
        <input class="primaryAction" type="submit" value="@T("Create")" />
    </fieldset>
    @Html.HiddenFor(m => m.AppInfoId)
}